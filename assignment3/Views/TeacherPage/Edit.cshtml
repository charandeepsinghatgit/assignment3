@model assignment3.Models.Teacher

<h2>Edit Teacher</h2>

<form asp-action="Update" method="post" asp-route-id="@Model.TeacherId">
    <div>
        <label>First Name</label>
        <input type="text" asp-for="TeacherFName" required />
    </div>
    <div>
        <label>Last Name</label>
        <input type="text" asp-for="TeacherLName" required />
    </div>
    <div>
        <label>Employee Number</label>
        <input type="text" asp-for="EmployeeNumber" required />
    </div>
    <div>
        <label>Hire Date</label>
        <input type="date" asp-for="HireDate" required />
    </div>
    <div>
        <label>Salary</label>
        <input type="number" asp-for="Salary" min="0" required />
    </div>
    <div>
        <input type="submit" value="Update Teacher" />
    </div>
</form>

@if (ViewBag.ErrorMessage != null)
{
    <p style="color:red">@ViewBag.ErrorMessage</p>
}
